#include <stdio.h>



int main(void){
    float Weight=0;
   printf("Weight Conversion : For Pounds to KG select 0, For Kg to Pounds select 1\n");
   scanf("%f", &Weight);

if(Weight==0){
    float PoundstoKG=0;
    printf("Please enter your weight in Pounds: \n");
    scanf("%f",&PoundstoKG);

    float KG= PoundstoKG/2.02;

    printf("Your Weight in Kilograms is : %f Kg" , KG);

}
else if(Weight ==1){
    float KGtoPounds=0;
     float Pounds=0;
    printf("Please enter your weight in Kilogram: \n");
    scanf("%f",&KGtoPounds);

   
    
    Pounds= KGtoPounds * 2.02;

    printf("Your Weight in Pounds is %f IB" , Pounds);
}
else{

    printf("You didn't select a valid option");
}
    return 0;
}
