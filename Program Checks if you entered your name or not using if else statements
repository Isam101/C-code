#include <stdio.h>
#include <string.h>


int main(void){
    
    char name[50]= "";

    printf("Please enter your name: ");
    fgets(name,sizeof(name),stdin);
    name[strlen(name) -1]= '\0';

    if(strlen(name) ==0){

        printf("Please enter your name as no name was entered");

    }
else{

    printf("Your name is %s ",name);
}

    return 0;
}


